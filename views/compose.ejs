<h1>Compose</h1>

<form action="/compose" method="POST">
  <div class="form-group">
    <label>Title</label>
    <input type="text" name="Title" class="form-control" id="Title" placeholder="Example input">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea name="postBody" class="form-control" cols="30" rows="5"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
  
</form>

